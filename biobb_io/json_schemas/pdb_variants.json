{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_io/json_schemas/1.0/pdb_variants",
    "name": "biobb_io MmbPdbVariants",
    "title": "This class is a wrapper for the MMB PDB mirror for downloading PDB variants.",
    "description": "Wrapper for the UNIPROT mirror of the MMB group REST API for additional help in the commandline usage please check here.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "UNIPROT",
            "version": ">1",
            "license": "Creative Commons"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "output_mutations_list_txt"
    ],
    "properties": {
        "output_mutations_list_txt": {
            "type": "string",
            "description": "Path to the TXT file containing an ASCII comma separated values of the mutations",
            "filetype": "output",
            "sample": null,
            "enum": [
                ".*\\.txt$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.txt$",
                    "description": "Path to the TXT file containing an ASCII comma separated values of the mutations"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "pdb_code": {
                    "type": "string",
                    "default": "2vgb",
                    "wf_prop": false,
                    "description": "RSCB PDB four letter code. ie: \"2ki5\"."
                },
                "url": {
                    "type": "string",
                    "default": "http://mmb.irbbarcelona.org/api",
                    "wf_prop": false,
                    "description": "URL of the UNIPROT REST API."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}