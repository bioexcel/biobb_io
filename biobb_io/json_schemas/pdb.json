{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_io/json_schemas/1.0/pdb",
    "name": "biobb_io Pdb",
    "title": "This class is a wrapper for the MMB PDB mirror for downloading a single PDB structure.",
    "description": "Wrapper for the PDB mirror of the MMB group REST API for additional help in the commandline usage please check here.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "PDB",
            "version": ">1",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "output_pdb_path"
    ],
    "properties": {
        "output_pdb_path": {
            "type": "string",
            "description": "Path to the output PDB file",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_io/raw/master/biobb_io/test/reference/api/pdb_1ubq.pdb",
            "enum": [
                ".*\\.pdb$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Path to the output PDB file"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "pdb_code": {
                    "type": "string",
                    "default": "1ubq",
                    "wf_prop": false,
                    "description": "RSCB PDB code."
                },
                "filter": {
                    "type": "string",
                    "default": "[ATOM, MODEL, ENDMDL]",
                    "wf_prop": false,
                    "description": "Array of groups to be kept. If value is None or False no filter will be applied. All the possible values are defined in the official PDB specification."
                },
                "url": {
                    "type": "string",
                    "default": "https://files.rcsb.org/download/",
                    "wf_prop": false,
                    "description": "URL of the PDB REST API. Another option for this parameter is the MMB PDB mirror API. ",
                    "enum": [
                        "https://files.rcsb.org/download/",
                        "http://mmb.irbbarcelona.org/api/pdb/"
                    ],
                    "property_formats": [
                        {
                            "name": "https://files.rcsb.org/download/",
                            "description": "PDB REST API"
                        },
                        {
                            "name": "http://mmb.irbbarcelona.org/api/pdb/",
                            "description": "MMB PDB mirror API"
                        }
                    ]
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}