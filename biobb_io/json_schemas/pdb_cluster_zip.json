{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_io/json_schemas/1.0/pdb_cluster_zip",
    "title": "Wrapper class for the MMB group PDB REST API.",
    "type": "object",
    "required": [
        "output_pdb_zip_path"
    ],
    "properties": {
        "output_pdb_zip_path": {
            "type": "string",
            "description": "Path to the ZIP or PDB file containing the output PDB files."
        },
        "properties": {
            "type": "object",
            "properties": {
                "pdb_code": {
                    "type": "string",
                    "default": "2vgb",
                    "description": "RSCB PDB code. ie: \"2VGB\""
                },
                "filter": {
                    "type": "string",
                    "default": [
                        "ATOM",
                        "MODEL",
                        "ENDMDL"
                    ],
                    "description": "Array of groups to be kept. If value is None or False no filter will be applied. All the possible values are defined in the official PDB specification (http://www.wwpdb.org/documentation/file-format-content/format33/v3.3.html)"
                },
                "cluster": {
                    "type": "string",
                    "default": 90,
                    "description": "Cluster number for the :meth:`biobb_io.api.MmbPdb.get_pdb_cluster_zip` method."
                },
                "url": {
                    "type": "string",
                    "default": "https://files.rcsb.org/download/",
                    "description": "URL of the PDB REST API. Another option for this parameter is the MMB PDB mirror API (\"http://mmb.irbbarcelona.org/api/pdb/\")."
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "description": "[WF property] Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "description": "[WF property] Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}