{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_io/json_schemas/1.0/pdb_cluster_zip",
    "name": "biobb_io MmbPdbClusterZip",
    "title": "This class is a wrapper for the MMB PDB mirror for downloading a PDB cluster.",
    "description": "Wrapper for the PDB mirror of the MMB group REST API for additional help in the commandline usage please check here.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "PDB",
            "version": ">1",
            "license": "Apache-2.0"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "output_pdb_zip_path"
    ],
    "properties": {
        "output_pdb_zip_path": {
            "type": "string",
            "description": "Path to the ZIP or PDB file containing the output PDB files",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_io/raw/master/biobb_io/test/reference/api/reference_output_pdb_zip_path.zip",
            "enum": [
                ".*\\.pdb$",
                ".*\\.zip$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.pdb$",
                    "description": "Path to the ZIP or PDB file containing the output PDB files"
                },
                {
                    "extension": ".*\\.zip$",
                    "description": "Path to the ZIP or PDB file containing the output PDB files"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "pdb_code": {
                    "type": "string",
                    "default": "2vgb",
                    "wf_prop": false,
                    "description": "RSCB PDB code. ie: \"2VGB\""
                },
                "filter": {
                    "type": "string",
                    "default": "[ATOM, MODEL, ENDMDL]",
                    "wf_prop": false,
                    "description": "Array of groups to be kept. If value is None or False no filter will be applied. All the possible values are defined in the official PDB specification (http://www.wwpdb.org/documentation/file-format-content/format33/v3.3.html)"
                },
                "cluster": {
                    "type": "string",
                    "default": "90",
                    "wf_prop": false,
                    "description": "Cluster number for the :meth:`biobb_io.api.MmbPdb.get_pdb_cluster_zip` method."
                },
                "url": {
                    "type": "string",
                    "default": "https://files.rcsb.org/download/) URL of the PDB REST API. Another option for this parameter is the MMB PDB mirror API (http://mmb.irbbarcelona.org/api/pdb/",
                    "wf_prop": false,
                    "description": ". ",
                    "enum": [
                        "https://files.rcsb.org/download/",
                        "http://mmb.irbbarcelona.org/api/pdb/"
                    ],
                    "property_formats": [
                        {
                            "name": "https://files.rcsb.org/download/",
                            "description": "PDB REST API"
                        },
                        {
                            "name": "http://mmb.irbbarcelona.org/api/pdb/",
                            "description": "MMB PDB mirror API"
                        }
                    ]
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                }
            }
        }
    },
    "additionalProperties": false
}